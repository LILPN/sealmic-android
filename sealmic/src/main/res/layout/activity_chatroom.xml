<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatroom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatroom_bg_01"
    android:orientation="vertical">
    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/chatroom_title_rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/chatroom_title_view_back"
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="17dp"
            android:paddingRight="4dp"
            android:src="@drawable/chatroom_bg_title_back" />

        <TextView
            android:id="@+id/chatroom_title_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/chatroom_title_view_back"
            android:background="@drawable/chatroom_title_bg_title"
            android:gravity="center"
            android:padding="9dp"
            android:textColor="@color/text_white"
            android:textSize="12dp"
            tools:text="来组CP (234人）" />

        <ImageView
            android:id="@+id/chatroom_title_view_setting"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@drawable/chatroom_ic_setting" />
    </RelativeLayout>

    <!-- 房主发言时背景动画 -->
    <cn.rongcloud.sealmic.ui.widget.RoomManagerRippleView
        android:id="@+id/chatroom_rv_room_manager_ripple"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-17dp"
        android:layout_below="@id/chatroom_title_rl_titlebar"
        app:startRadius="45dp"
        app:maxRadius="70dp"
        app:duration="1000"
        app:firstColor="#aa5E86FA"
        app:secondColor="#665E86FA"
        />

    <!-- 房主头像 -->
    <ImageView
        android:id="@+id/chatroom_iv_room_manager_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/chatroom_title_rl_titlebar"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="@drawable/chatroom_bg_room_manager_avatar"
        android:padding="4dp"
        tools:src="@drawable/chatroom_user_avatar_02" />

    <TextView
        android:id="@+id/chatroom_tv_room_manager_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatroom_iv_room_manager_avatar"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_white"
        android:textSize="16dp"
        tools:text="NS.千百度" />

    <!-- 麦位 -->
    <RelativeLayout
        android:id="@+id/chatroom_ll_mic_seat"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/chatroom_tv_room_manager_nickname"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:clipChildren="false"
            >


            <cn.rongcloud.sealmic.ui.widget.MicSeatView
                android:id="@+id/chatroom_mp_mic_1"
                style="@style/MicSeatViewStyle" />


            <cn.rongcloud.sealmic.ui.widget.MicSeatView
                android:id="@+id/chatroom_mp_mic_2"
                style="@style/MicSeatViewStyle" />


            <cn.rongcloud.sealmic.ui.widget.MicSeatView
                android:id="@+id/chatroom_mp_mic_3"
                style="@style/MicSeatViewStyle" />


            <cn.rongcloud.sealmic.ui.widget.MicSeatView
                android:id="@+id/chatroom_mp_mic_4"
                style="@style/MicSeatViewStyle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            >


            <cn.rongcloud.sealmic.ui.widget.MicSeatView
                android:id="@+id/chatroom_mp_mic_5"
                style="@style/MicSeatViewStyle" />


            <cn.rongcloud.sealmic.ui.widget.MicSeatView
                android:id="@+id/chatroom_mp_mic_6"
                style="@style/MicSeatViewStyle" />


            <cn.rongcloud.sealmic.ui.widget.MicSeatView
                android:id="@+id/chatroom_mp_mic_7"
                style="@style/MicSeatViewStyle" />

            <cn.rongcloud.sealmic.ui.widget.MicSeatView
                android:id="@+id/chatroom_mp_mic_8"
                style="@style/MicSeatViewStyle" />

        </LinearLayout>
    </RelativeLayout>

    <!-- 聊天列表 -->
    <ListView
        android:id="@+id/chatroom_list_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/chatroom_ll_input_container"
        android:layout_below="@id/chatroom_ll_mic_seat"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:divider="@null"
        android:dividerHeight="8dp"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:scrollbarThumbVertical="@android:color/transparent"
        tools:listitem="@layout/chatroom_item_chatlist_chat" />

    <!-- 底部输入栏 -->
    <LinearLayout
        android:id="@+id/chatroom_ll_input_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/chatroom_et_chat_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/chatroom_bg_input_text"
            android:hint="@string/room_send_message_hint"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <ImageView
            android:id="@+id/chatroom_iv_mic_control"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/chatroom_ic_mic_enable" />

        <ImageView
            android:id="@+id/chatroom_iv_sound_control"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/chatroom_ic_volume" />
    </LinearLayout>

</RelativeLayout>