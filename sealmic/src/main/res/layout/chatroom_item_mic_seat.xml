<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/chatroom_item_iv_mic_seat"
        android:padding="1dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerInParent="true"
        android:src="@drawable/chatroom_bg_mic_seat_empty" />

    <ImageView
        android:id="@+id/chatroom_item_iv_mic_mute"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignRight="@id/chatroom_item_iv_mic_seat"
        android:layout_alignBottom="@id/chatroom_item_iv_mic_seat"
        android:src="@drawable/chatroom_ic_mic_seat_mute"
        android:visibility="gone"
        tools:visibility="visible" />

    <cn.rongcloud.sealmic.ui.widget.MicSeatRippleView
        android:id="@+id/chatroom_item_rp_mic_ripple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:color="@android:color/white"
        app:isAlpha="true"
        app:startOffset="32.5dp"
        app:speed="0.5"
        />
    <TextView
        android:id="@+id/chatroom_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Isaac Ingersoll"
        android:textColor="@color/text_white"
        android:textSize="10dp"
        android:layout_below="@+id/chatroom_item_iv_mic_seat"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>